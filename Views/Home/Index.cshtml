@model MatrixModel

@{
    ViewData["Title"] = "Matrix Operations";
}

<h2>Matrix Operations</h2>

@using (Html.BeginForm("Calculate", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Size, "Select Matrix Size")
        @Html.DropDownListFor(m => m.Size, new SelectList(new[] { 3, 6, 9 }), new { @class = "form-control" })
    </div>

    <h3>Matrix A</h3>
    @for (int i = 0; i < Model.Size; i++)
    {
        <div class="form-group">
            @for (int j = 0; j < Model.Size; j++)
            {
                @Html.TextBoxFor(m => m.MatrixA[i][j], new { @class = "form-control", style = "width: 50px; display: inline;" })
            }
        </div>
    }

    <h3>Matrix B</h3>
    @for (int i = 0; i < Model.Size; i++)
    {
        <div class="form-group">
            @for (int j = 0; j < Model.Size; j++)
            {
                @Html.TextBoxFor(m => m.MatrixB[i][j], new { @class = "form-control", style = "width: 50px; display: inline;" })
            }
        </div>
    }

    <button type="submit" name="operation" value="Add" class="btn btn-primary">Add</button>
    <button type="submit" name="operation" value="Multiply" class="btn btn-secondary">Multiply</button>
}